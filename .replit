modules = ["php", "php-8.2", "postgresql-16", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["glibcLocales", "sqlite"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TEcnoAule Server"

[[workflows.workflow]]
name = "TEcnoAule Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 -t ."
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
